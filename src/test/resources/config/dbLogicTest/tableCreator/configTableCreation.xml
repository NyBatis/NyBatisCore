<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xmlns="urn:nybatis.configuration:1.2"
               xsi:schemaLocation="urn:nybatis.configuration:1.2 http://nybatis.github.io/schema/nybatis-config.xsd">

  <environment id="h2">
    <datasourceJdbc poolMin="1" poolMax="1" ping="true" pingCycle="600" >
      <driver>org.h2.Driver</driver>
      <url>jdbc:h2:file:#{default.root}/localDb/tableCreation/h2;AUTO_SERVER=TRUE</url>
      <username>sys</username>
      <password>sys</password>
      <createTable>true</createTable>
    </datasourceJdbc>
    <sqlPath>
      <path>./mapper</path>
    </sqlPath>
  </environment>

</configuration>