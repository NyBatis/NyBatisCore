<!ELEMENT configuration (properties?, environment*)>

  <!ELEMENT properties (property*)>
  <!ATTLIST properties
    path CDATA #IMPLIED
    >

    <!ELEMENT property EMPTY>
    <!ATTLIST property
      key CDATA #REQUIRED
      value CDATA #REQUIRED
      >


  <!ELEMENT environment (datasource, sqlpath?)>
  <!ATTLIST environment
    id CDATA #REQUIRED
    default (true|false) #IMPLIED
    >

  <!ELEMENT datasource ( driver, url, (username | password | timeout | autocommit ) | (initialContext , providerUrl), name )>
  <!ATTLIST datasource
    type      (jdbc|jndi) #REQUIRED
    poolMin   CDATA #IMPLIED
    poolMax   CDATA #IMPLIED
    poolStep  CDATA #IMPLIED
    ping      CDATA #IMPLIED
    pingCycle CDATA #IMPLIED
    >

    <!ELEMENT driver ANY>
    <!ELEMENT url ANY>
    <!ELEMENT username ANY>
    <!ELEMENT password ANY>
    <!ELEMENT timeout ANY>
    <!ELEMENT autocommit ANY>
    <!ELEMENT initialContext ANY>
    <!ELEMENT providerUrl ANY>
    <!ELEMENT name ANY>

  <!ELEMENT sqlpath ( path )>
    <!ELEMENT path ANY>